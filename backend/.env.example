# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/silk_route_logistics?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Marco Polo AI Chatbot (powered by Google Gemini)
GEMINI_API_KEY=your-gemini-api-key

# Email (Resend HTTP API — https://resend.com)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@silkroutelogistics.ai

# Google Maps (Distance Matrix API for auto billable miles)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# FMCSA Carrier Verification (optional — falls back to demo mode)
FMCSA_WEB_KEY=your-fmcsa-web-key
